---
import { timelineEntries } from '../data/timeline';
import TimelineEntry from './TimelineEntry.astro';
---

<section id="timeline" class="py-20 sm:py-28 bg-surface/30">
  <div class="mx-auto max-w-5xl px-6">
    <!-- Section header -->
    <div class="mb-12 flex items-end justify-between border-b border-hairline pb-4">
      <div>
        <span class="font-mono text-xs text-text-faint uppercase tracking-wider block mb-2">03</span>
        <h2 class="font-serif text-3xl sm:text-4xl font-semibold">Experience</h2>
      </div>
      <span class="font-mono text-xs text-text-faint">
        {timelineEntries.length} entries
      </span>
    </div>

    <!-- Timeline -->
    <div class="max-w-2xl">
      {timelineEntries.map((entry) => (
        <TimelineEntry entry={entry} />
      ))}
    </div>
  </div>
</section>
