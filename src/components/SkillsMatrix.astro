---
import { skillCategories } from '../data/skills';

const levelWidths: Record<string, string> = {
  advanced: 'w-full',
  proficient: 'w-3/4',
  familiar: 'w-1/2',
};

const accentMap: Record<string, string> = {
  moss: 'text-moss',
  indigo: 'text-indigo',
  terracotta: 'text-terracotta',
  amber: 'text-amber',
  'text-muted': 'text-text-muted',
};

const barColorMap: Record<string, string> = {
  moss: 'bg-moss',
  indigo: 'bg-indigo',
  terracotta: 'bg-terracotta',
  amber: 'bg-amber',
  'text-muted': 'bg-text-muted',
};
---

<section id="skills" class="py-20 sm:py-28 bg-surface/30">
  <div class="mx-auto max-w-5xl px-6">
    <!-- Section header -->
    <div class="mb-12 flex items-end justify-between section-divider pb-4">
      <div>
        <span class="font-mono text-xs text-text-faint uppercase tracking-wider block mb-2">02</span>
        <h2 class="font-serif text-3xl sm:text-4xl font-semibold">Technical Skills</h2>
      </div>
      <span class="font-mono text-xs text-text-faint">
        {skillCategories.reduce((sum, cat) => sum + cat.skills.length, 0)} capabilities
      </span>
    </div>

    <!-- Skills grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {skillCategories.map((category) => (
        <div class="border border-hairline rounded-sm overflow-hidden card-hover animate-on-scroll">
          <!-- Category header -->
          <div class="bg-elevated px-4 py-2.5 border-b border-hairline flex items-center justify-between">
            <span class={`font-mono text-xs font-medium ${accentMap[category.accent]}`}>
              {category.label}
            </span>
            <span class="font-mono text-[10px] text-text-faint">
              {category.id}://
            </span>
          </div>

          <!-- Skills list -->
          <div class="bg-surface/30 px-4 py-3">
            <div class="space-y-2.5">
              {category.skills.map((skill) => (
                <div>
                  <div class="flex items-center justify-between gap-3 mb-1">
                    <span class="font-mono text-xs text-text-muted truncate">
                      {skill.name}
                    </span>
                    {skill.level && (
                      <span class="font-mono text-[10px] text-text-faint shrink-0">
                        {skill.level}
                      </span>
                    )}
                  </div>
                  {skill.level && (
                    <div class="h-1 bg-base rounded-full overflow-hidden">
                      <div class={`h-full ${barColorMap[category.accent]} rounded-full skill-bar-fill opacity-60 ${levelWidths[skill.level]}`}></div>
                    </div>
                  )}
                </div>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Legend -->
    <div class="mt-6 flex flex-wrap gap-6 font-mono text-[10px] text-text-faint">
      <span class="flex items-center gap-2">
        <span class="inline-block w-8 h-1 bg-text-muted/60 rounded-full"></span> advanced
      </span>
      <span class="flex items-center gap-2">
        <span class="inline-block w-6 h-1 bg-text-muted/40 rounded-full"></span> proficient
      </span>
      <span class="flex items-center gap-2">
        <span class="inline-block w-4 h-1 bg-text-muted/20 rounded-full"></span> familiar
      </span>
    </div>
  </div>
</section>
