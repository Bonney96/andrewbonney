---
interface Props {
  title: string;
  description: string;
  tags: string[];
  status: 'live' | 'beta' | 'coming-soon';
  slug: string;
}

const { title, description, tags, status, slug } = Astro.props;

const statusColors = {
  'live': 'bg-moss/20 text-moss',
  'beta': 'bg-amber/20 text-amber',
  'coming-soon': 'bg-indigo/20 text-indigo',
} as const;

const statusLabels = {
  'live': 'Live',
  'beta': 'Beta',
  'coming-soon': 'Initializing...',
} as const;
---

<article class="group relative border border-hairline rounded-sm bg-surface/50 hover:bg-surface hover:border-hairline-strong transition-all duration-300">
  <!-- Card header with metadata -->
  <div class="px-5 pt-4 pb-3 border-b border-hairline flex items-center justify-between">
    <div class="flex items-center gap-3">
      <span class={`inline-flex items-center px-2 py-0.5 rounded-sm font-mono text-[10px] uppercase tracking-wider ${statusColors[status]}`}>
        {statusLabels[status]}
      </span>
    </div>
    <span class="font-mono text-[10px] text-text-faint">
      {tags[0]}
    </span>
  </div>

  <!-- Card body -->
  <div class="px-5 py-5">
    <h3 class="font-serif text-xl font-semibold mb-2 group-hover:text-moss transition-colors">
      <a href={`/projects/${slug}`} class="after:absolute after:inset-0">
        {title}
      </a>
    </h3>
    <p class="text-text-muted text-sm leading-relaxed line-clamp-3">
      {description}
    </p>
  </div>

  <!-- Card footer with tags -->
  <div class="px-5 pb-4 flex flex-wrap gap-2">
    {tags.map((tag) => (
      <span class="font-mono text-[10px] text-text-faint px-1.5 py-0.5 border border-hairline rounded-sm">
        {tag}
      </span>
    ))}
  </div>

  <!-- External link indicator -->
  {status !== 'coming-soon' && (
    <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity">
      <span class="font-mono text-xs text-text-faint">&nearr;</span>
    </div>
  )}
</article>
