---

<section id="contact" class="py-20 sm:py-28 bg-surface/30">
  <div class="mx-auto max-w-5xl px-6">
    <!-- Section header -->
    <div class="mb-12 flex items-end justify-between border-b border-hairline pb-4">
      <div>
        <span class="font-mono text-xs text-text-faint uppercase tracking-wider block mb-2">05</span>
        <h2 class="font-serif text-3xl sm:text-4xl font-semibold">Connect</h2>
      </div>
    </div>

    <div class="flex flex-wrap gap-6">
      {socialLinks.map((link) => (
        <a
          href={link.href}
          target={link.href.startsWith('mailto:') ? undefined : '_blank'}
          rel={link.href.startsWith('mailto:') ? undefined : 'noopener noreferrer'}
          class="group flex items-center gap-3 px-5 py-3 border border-hairline rounded-sm hover:border-hairline-strong hover:bg-surface transition-all"
        >
          <svg
            class="w-4 h-4 text-text-muted group-hover:text-moss transition-colors"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path d={iconPaths[link.icon]} />
          </svg>
          <span class="font-mono text-sm text-text-muted group-hover:text-text transition-colors">
            {link.label}
          </span>
        </a>
      ))}
    </div>
  </div>
</section>
